# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

POST    /listing					controllers.Application.addListing()

GET 	/listings					controllers.Application.getListings()

GET 	/math 						controllers.Application.math()

GET 	/english 					controllers.Application.english()

GET 	/cs							controllers.Application.cs()

GET 	/artHist 					controllers.Application.artHist()

GET 	/chemistry					controllers.Application.chemistry()

GET 	/physics					controllers.Application.physics()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

